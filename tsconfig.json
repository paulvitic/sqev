{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "esnext"
    ],
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "typings.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

